@using System.Collections
@using System.Data
@{

    Layout = "~/Areas/Layout/_AreaLayout.cshtml";

}

@model IEnumerable<Online_Food.Areas.Menu_Items.Models.Menu_ItemsModel>;

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>

}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-danger">@TempData["DeleteMessage"]</div>
}
@if (TempData["MessageFKReference"] != null)
{
    <div class="alert alert-danger">@TempData["MessageFKReference"]</div>
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Add your meta tags and title here -->
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h3>Search Menu</h3>
                        </h5><br />

                        <!-- Search Form -->
                        <form class="" role="form" asp-action="Menu_ItemSearch" asp-controller="Menu_Items" asp-area="Menu_Items">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row g-3">
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <label class="form-label">MenuItemName :</label>
                                            <input type="text" name="MenuItemName" class="form-control dt-input dt-full-name" data-column="1" placeholder="MenuItemName" data-column-index="0" fdprocessedid="2u7jd">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="m-3 btn btn-outline-success" type="submit">Search</button>
                            <button class="m-3 btn btn-outline-dark" type="submit" asp-action="Menu_ItemSearch" asp-controller="Menu_Items" asp-area="Menu_Items">Clear</button>
                        </form>
                        <!-- End Search Form -->
                    </div>
                </div>
            </div>

            <!-- Users List Card -->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h3>Menu_ItemsList</h3>
                        </h5><br />


                        <!-- Add Users Button -->
                        <div class="nav-link ml-auto">
                            <a class=" btn btn-outline-success" asp-area="Menu_Items" asp-controller="Menu_Items" asp-action="Menu_ItemsAddEdit">+ Add Menu</a>

                                </div>


                        <!-- Table with stripped rows -->
                        <div class="table-responsive">

                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                       @*  <th scope="col">MenuItemID</th> *@
                                        <th scope="col">MenuImg</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">MenuItemName</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">CategoryName</th>
                                        <th scope="col">Created</th>
                                        <th scope="col">Modified</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                @foreach (var dr in Model)
                                {
                                    <tbody>
                                        <tr>
                                           @*  <td>@dr.MenuItemID</td> *@
                                            @* <td><img src="@dr.[MenuImg] " height=20 width=20 /></td>     *@                 
                                          
                                            <td><img width="150" height="150" class="card-img-top" src="@dr.MenuImg" alt="Menu image "></td>
                                            <td>@dr.Name</td>
                                            <td>@dr.MenuItemName</td>
                                            <td>@dr.Description</td>
                                            <td>@dr.Price</td>
                                            <td>@dr.CategoryName</td>
                                            <td>@Convert.ToDateTime(dr.Created).ToString("dd-MM-yyyy")</td>
                                            <td>@Convert.ToDateTime(dr.Modified).ToString("dd-MM-yyyy")</td>
                                            <td>
                                                <form method="post" asp-area="Menu_Items" asp-controller="Menu_Items" asp-action="Menu_ItemsDetails" asp-route-MenuItemID="@dr.MenuItemID">
                                                    <button type="submit" class="btn btn-outline-success"><i class="ti-file btn-icon-append"></i></button>
                                                </form>
                                            </td>
                                            <td>

                                                <a type="button" onclick="return confirm('Are you sure you want to delete record?')" asp-area="Menu_Items" asp-controller="Menu_Items" asp-action="DeleteMenu" asp-route-MenuItemID="@dr.MenuItemID" class="btn btn-outline-danger"><i class="ti-trash btn-icon-append"></i></a>


                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
            <!-- End Users List Card -->
        </div>
    </div>
</body>

</html>