@using Online_Food.Areas.FoodOrder.Models;
@using System.Data;
@using System.Collections;
@model Online_Food.Areas.Cart.Models.CartModel;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"><h3>cart Details</h3></div>

                    <form>

                      

                        <div class="form-group row">
                            <div class="col-sm-2">Qty</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Qty</div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2">UserID</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.UserID</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">MenuItemID</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.MenuItemID</div>
                        </div>

                      


                        <tr>
                            <td>
                                <a type="button" asp-area="Cart" asp-controller="Cart" asp-action="CartAddEdit" asp-route-CartID="@Model.CartID">
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                </a>

                            </td>
                        </tr>

                        <a class="btn btn-outline-secondary" asp-area="Cart" asp-controller="Cart" asp-action="CartList">Back</a>



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>