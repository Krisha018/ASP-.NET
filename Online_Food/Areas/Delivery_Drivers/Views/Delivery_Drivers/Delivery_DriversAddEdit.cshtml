@using Online_Food.Areas.Delivery_Drivers.Models;
@using System.Data;
@using System.Collections;
@model Delivery_DriversModel


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-title"><h3>Delivery Details</h3></div></br>
            <hr>

            <form method="post" asp-area="Delivery_Drivers" asp-controller="Delivery_Drivers" asp-action="SaveForAddEdit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="DriverID" />
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label for="exampleInputName1">FirstName</label>
                    <input type="text" class=" form-control" required="required" asp-for="FirstName" placeholder="Enter FirstName" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label for="exampleInputEmail3">LastName</label>
                    <input type="text" class=" form-control" required="required" asp-for="LastName" placeholder="Enter LastName" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>PhoneNumber</label>
                    <input type="text" class=" form-control" required="required" asp-for="PhoneNumber" placeholder="Enter PhoneNumber" />

                </div>
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>DriverLicenceNo</label>
                    <input type="text" class=" form-control" required="required" asp-for="DriverLicenceNo" placeholder="Enter DriverLicenceNo" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label> DriverLicencePhoto</label>
                    <input type="text" class=" form-control" required="required" asp-for="DriverLicencePhoto" placeholder="Enter DriverLicencePhoto" />
                </div>

               
               

                <div class="form-group">
                    <input type="submit" class=" btn btn-outline-success" value="Save">

                </div>
            </form>
        </div>
    </div>
</div>          