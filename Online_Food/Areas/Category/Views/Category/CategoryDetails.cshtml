@using Online_Food.Areas.Category.Models;
@using System.Data;
@using System.Collections;
@model Online_Food.Areas.Category.Models.CategoryModel;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"><h3>Category Details</h3></div>

                    <form>

                        <div class="form-group row">
                            <div class="col-sm-2">CategoryName</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.CategoryName</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">CategoryType</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.CategoryType</div>
                        </div>
                       
                        <tr>
                            <td>
                                <a type="button" asp-area="Category" asp-controller="Category" asp-action="CategoryAddEdit" asp-route-CategoryID="@Model.CategoryID">
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                </a>

                            </td>
                        </tr>

                        <a class="btn btn-outline-secondary" asp-area="Category" asp-controller="Category" asp-action="CategoryList">Back</a>



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>