@using System.Collections
@using System.Data
@{
   
    Layout = "~/Areas/Layout/_AreaLayout.cshtml";
}

@model IEnumerable<Online_Food.Areas.OFD_Users.Models.OFD_UsersModel>;

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-danger">@TempData["DeleteMessage"]</div>
}
@if (TempData["MessageFKReference"] != null)
{
    <div class="alert alert-danger">@TempData["MessageFKReference"]</div>
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Add your meta tags and title here -->
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h3>Search Users</h3>
                        </h5><br />

                        <!-- Search Form -->
                        <form class="" role="form" asp-action="OFD_UserSearch" asp-controller="OFD_Users" asp-area="OFD_Users">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row g-3">
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <label class="form-label">First Name:</label>
                                            <input type="text" name="FirstName" class="form-control dt-input dt-full-name" data-column="1" placeholder="FirstName" data-column-index="0">
                                        </div>
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <label class="form-label">Last Name:</label>
                                            <input type="text" name="LastName" class="form-control dt-input" data-column="2" placeholder="LastName" data-column-index="1">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <button class="m-3 btn btn-outline-success" type="submit">Search</button>
                            <button class="m-3 btn btn-outline-dark" type="submit" asp-action="OFD_UserSearch" asp-controller="OFD_Users" asp-area="OFD_Users">Clear</button>
                        </form>
                        <!-- End Search Form -->
                    </div>
                </div>
            </div>

            <!-- Users List Card -->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h3>OFD_UsersList</h3>
                        </h5><br />

                        <!-- Add Users Button -->
                        <div class="nav-link ml-auto">
                            <a class="btn btn-outline-success" asp-area="OFD_Users" asp-controller="OFD_Users" asp-action="OFD_UsersAddEdit">+ Add Users</a>
                            <a class="btn btn-outline-primary" asp-action="ExportCountryToExcel" asp-area="OFD_Users" asp-controller="OFD_Users">XML</a>&nbsp;
                        </div>

                        <!-- Table with stripped rows -->
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">UserID</th>
                                        <th scope="col">FirstName</th>
                                        <th scope="col">LastName</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Password</th>
                                        <th scope="col">PhoneNumber</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Created</th>
                                        <th scope="col">Modified</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dr in Model ?? Enumerable.Empty<Online_Food.Areas.OFD_Users.Models.OFD_UsersModel>())
                                    {
                                        <tr>
                                            <td>@dr.UserID</td>
                                            <td>@dr.FirstName</td>
                                            <td>@dr.LastName</td>
                                            <td>@dr.Email</td>
                                            <td>@dr.Password</td>
                                            <td>@dr.PhoneNumber</td>
                                            <td>@dr.Address</td>
                                            <td>@Convert.ToDateTime(dr.Created).ToString("dd-MM-yyyy")</td>
                                            <td>@Convert.ToDateTime(dr.Modified).ToString("dd-MM-yyyy")</td>
                                            <td>
                                                <form method="post" asp-area="OFD_Users" asp-controller="OFD_Users" asp-action="OFD_UserDetails" asp-route-UserID="@dr.UserID">
                                                    <button type="submit" class="btn btn-outline-success"><i class="ti-file btn-icon-append"></i></button>
                                                </form>
                                            </td>
                                            <td>
                                                <a type="button" asp-area="OFD_Users" asp-controller="OFD_Users" asp-action="DeleteUsers" asp-route-UserID="@dr.UserID" class="btn btn-outline-danger"><i class="ti-trash btn-icon-append"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
            <!-- End Users List Card -->
        </div>
    </div>
</body>

</html>
