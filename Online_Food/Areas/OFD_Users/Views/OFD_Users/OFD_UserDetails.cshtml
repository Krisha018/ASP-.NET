@using Online_Food.Areas.OFD_Users.Models;
@using System.Data;
@using System.Collections;
@model Online_Food.Areas.OFD_Users.Models.OFD_UsersModel;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"><h3>Users Detail</h3></div>
                  
                    <form>

                        <div class="form-group row">
                            <div class="col-sm-2">FirstName</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.FirstName</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">LastName</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.LastName</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Email</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Email</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2" >Password</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Password</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">PhoneNumber</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.PhoneNumber</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Address</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Address</div>
                        </div>

                        <tr>
                            <td>
                            <a type="button" asp-area="OFD_Users" asp-controller="OFD_Users" asp-action="OFD_UsersAddEdit" asp-route-UserID="@Model.UserID">
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                </a>

                            </td>
                        </tr>

                        <a class="btn btn-outline-secondary" asp-area="OFD_Users" asp-controller="OFD_Users" asp-action="OFD_UsersList">Back</a>



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>