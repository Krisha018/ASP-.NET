@using Online_Food.Areas.OFD_Users.Models;
@using System.Data;
@using System.Collections;
@model OFD_UsersModel


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-title"><h3>Users Details</h3></div></br>
            <hr>

            <form method="post" asp-area="OFD_Users" asp-controller="OFD_Users" asp-action="SaveForAddEdit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="UserID" />
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label for="exampleInputName1">FirstName</label>
                    <input type="text" class=" form-control" required="required" asp-for="FirstName" placeholder="Enter FirstName" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label for="exampleInputEmail3">LastName</label>
                    <input type="text" class=" form-control" required="required"  asp-for="LastName" placeholder="Enter LastName" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>Email</label>
                    <input type="text" class=" form-control" required="required"  asp-for="Email" placeholder="Enter Email" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label> Password</label>
                    <input type="text" class=" form-control" required="required" asp-for="Password" placeholder="Enter Password" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>PhoneNumber</label>
                    <input type="text" class=" form-control" required="required"  asp-for="PhoneNumber" placeholder="Enter PhoneNumber" />

                </div>
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>Address</label>
                    <input type="text" class="form-control" required="required"  asp-for="Address" placeholder="Address">
                </div>
             
                <div class="form-group">
                    <input type="submit" class=" btn btn-outline-success" value="Save">
                           
                        </div>
            </form>
        </div>
    </div>
</div>          