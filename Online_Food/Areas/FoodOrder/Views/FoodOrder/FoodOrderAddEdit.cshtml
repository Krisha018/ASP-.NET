@using Online_Food.Areas.FoodOrder.Models;
@using System.Data;
@using System.Collections;
@model FoodOrderModel


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-title"><h3>Food Details</h3></div></br>
            <hr>

            <form method="post" asp-area="FoodOrder" asp-controller="FoodOrder" asp-action="SaveForAddEdit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="OrderID" />
                <div class="mb-3">
                    <label for="formValidationName" class="form-label"><span class="text-danger">* </span>Select FirstName</label>
                    <select id="inputState" class="form-control" asp-for="UserID"
                            asp-items="@(new SelectList(ViewBag.OFD_User_DropDownList,"UserID","FirstName"))">

                        <option disabled selected>Select FirstName</option>
                    </select>

                </div>

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>FoodImg</label>
                    <input type="text" class=" form-control" asp-for="FoodImg" required="required" placeholder="Enter FoodImg" />
                   

                </div>

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label for="exampleInputEmail3">OrderDate</label>
                    <input type="datetime-local" class=" form-control" required="required" asp-for="OrderDate" placeholder="Enter OrderDate" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>TotalAmount</label>
                    <input type="text" class=" form-control" asp-for="TotalAmount" required="required"  placeholder="Enter TotalAmount" />
                </div>



                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>DeliveryAddress</label>
                    <input type="text" class=" form-control" asp-for="DeliveryAddress" required="required"  placeholder="Enter DeliveryAddress" />

                </div>
                
                <div class="form-group">
                    <input type="submit" class=" btn btn-outline-success" value="Save">

                </div>
            </form>
        </div>
    </div>
</div>          