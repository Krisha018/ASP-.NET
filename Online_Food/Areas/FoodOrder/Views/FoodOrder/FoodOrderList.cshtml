@using System.Collections
@using System.Data
@{

    Layout = "~/Areas/Layout/_AreaLayout.cshtml";

}

@model IEnumerable<Online_Food.Areas.FoodOrder.Models.FoodOrderModel>;

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>

}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-danger">@TempData["DeleteMessage"]</div>
}
@if (TempData["MessageFKReference"] != null)
{
    <div class="alert alert-danger">@TempData["MessageFKReference"]</div>
}


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Add your meta tags and title here -->
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h3>Search Food</h3>
                        </h5><br />

                        <!-- Search Form -->
            <form class="" role="form" asp-action="FoodOrderSearch" asp-controller="FoodOrder" asp-area="FoodOrder">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row g-3">
                                          <div class="col-12 col-sm-6 col-lg-4">
                                <label class="form-label">TotalAmount:</label>
                                <input type="text" name="TotalAmount" class="form-control dt-input dt-full-name" data-column="1" placeholder="TotalAmount" data-column-index="0" fdprocessedid="2u7jd">
                            </div>
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <label class="form-label">First Name:</label>
                                            <input type="text" name="FirstName" class="form-control dt-input dt-full-name" data-column="1" placeholder="FirstName" data-column-index="0" fdprocessedid="2u7jd">
                                        </div>
                                    </div>
                                </div>
                            </div>
                          <button class="m-3 btn btn-outline-success" type="submit">Search</button>
                <button class="m-3 btn btn-outline-dark" type="submit" asp-action="FoodOrderSearch" asp-controller="FoodOrder" asp-area="FoodOrder">Clear</button>
     </form>
                        <!-- End Search Form -->
                    </div>
                </div>
            </div>

            <!-- Users List Card -->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h3>FoodOrderList</h3>
                        </h5><br />


                        <!-- Add Users Button -->
                        <div class="nav-link ml-auto">
                        <a class=" btn btn-outline-success" asp-area="FoodOrder" asp-controller="FoodOrder" asp-action="FoodOrderAddEdit">+ Add Food</a>
                        </div>


                        <!-- Table with stripped rows -->
                        <div class="table-responsive">

                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">FoodImg</th>
                                    @*     <th scope="col">OrderID</th> *@
                                        @* <th scope="col">UserID</th> *@
                                        <th scope="col">FirstName</th>
                                        <th scope="col">OrderDate</th>
                                        <th scope="col">TotalAmount</th>
                                        <th scope="col">DeliveryAddress</th>
                                        <th scope="col">Created</th>
                                        <th scope="col">Modified</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                @foreach (var dr in Model)
                                {
                                    <tbody>
                                        <tr>
                                            @* <td>@dr.OrderID</td> *@
                                            <td><img width="100" height="110" class="card-img-top" src="@dr.FoodImg" alt="Food image "></td>
                                            @* <td>@dr.UserID</td> *@
                                            <td>@dr.FirstName</td>
                                            <td>@Convert.ToDateTime(dr.OrderDate).ToString("dd-MM-yyyy")</td>
                                            <td>@dr.TotalAmount</td>
                                            <td>@dr.DeliveryAddress</td>
                                            <td>@dr.Created.ToString("dd-MM-yyyy")</td>
                                            <td>@dr.Modified.ToString("dd-MM-yyyy")</td>
                                            @*   <td>@Convert.ToDateTime(dr.Modified).ToString("dd-MM-yyyy")</td> *@

                                            <td>
                                                <form method="post" asp-area="FoodOrder" asp-controller="FoodOrder" asp-action="FoodOrderAddEdit" asp-route-OrderID="@dr.OrderID">
                                                    <button type="submit" class="btn btn-outline-success"><i class="ti-file btn-icon-append"></i></button>
                                                </form>
                                            </td>
                                            <td>

                                                <a type="button" asp-area="FoodOrder" asp-controller="FoodOrder" asp-action="DeleteFood" asp-route-OrderID="@dr.OrderID" class="btn btn-outline-danger"><i class="ti-trash btn-icon-append"></i></a>


                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
            <!-- End Users List Card -->
        </div>
    </div>
</body>

</html>