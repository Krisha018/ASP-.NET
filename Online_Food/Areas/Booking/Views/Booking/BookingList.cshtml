@using System.Collections
@using System.Data
@{
    Layout = "~/Areas/Layout/_AreaLayout.cshtml";

}

@model IEnumerable<Online_Food.Areas.Booking.Models.BookingModel>;

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>

}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-danger">@TempData["DeleteMessage"]</div>
}
@if (TempData["MessageFKReference"] != null)
{
    <div class="alert alert-danger">@TempData["MessageFKReference"]</div>
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Add your meta tags and title here -->
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h3>Search Users</h3>
                        </h5><br />

                        <!-- Search Form -->
                        <form class="" role="form" asp-action="BookingSearch" asp-controller="Booking" asp-area="Booking">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row g-3">
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <label class="form-label">FirstName :</label>
                                            <input type="text" name="FirstName" class="form-control dt-input dt-full-name" data-column="1" placeholder="FirstName" data-column-index="0" fdprocessedid="2u7jd">
                                        </div>
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <label class="form-label">MenuItemName :</label>
                                            <input type="text" name="MenuItemName" class="form-control dt-input" data-column="2" placeholder="MenuItemName" data-column-index="1" fdprocessedid="yxqeh">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <button class="m-3 btn btn-outline-success" type="submit">Search</button>
                            <button class="m-3 btn btn-outline-dark" type="submit" asp-action="BookingSearch" asp-controller="Booking" asp-area="Booking">Clear</button>
                        </form>
                        <!-- End Search Form -->
                    </div>
                </div>
            </div>

            <!-- Users List Card -->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h3>BookingList</h3>
                        </h5><br />


                        <!-- Add Users Button -->
                        <div class="nav-link ml-auto">
                            <a class="btn btn-outline-success" asp-area="Booking" asp-controller="Booking" asp-action="BookingAddEdit">+ Add Users</a>
                           
                        </div>


                        <!-- Table with stripped rows -->
                        <div class="table-responsive">

                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">BookingID</th>
                                        <th scope="col">FirstName</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">OrderDate</th>
                                        @* <th scope="col">MenuItemID</th> *@
                                        <th scope="col">MenuItemName</th>
                                        <th scope="col">Email</th>
                                       
                                        <th scope="col">PhoneNumber</th>
                                        
                                        <th scope="col">Created</th>
                                        <th scope="col">Modified</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                @foreach (var dr in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@dr.BookingID</td>
                                            <td>@dr.FirstName</td>
                                            <td>@dr.Address</td>
                                            <td>@Convert.ToDateTime(dr.OrderDate).ToString("dd-MM-yyyy")</td>
                                            @* <td>@dr.MenuItemID</td> *@
                                            <td>@dr.MenuItemName</td>
                                            <td>@dr.Email</td>
                                           
                                            <td>@dr.PhoneNumber</td>
                                           
                                            <td>@Convert.ToDateTime(dr.Created).ToString("dd-MM-yyyy")</td>
                                            <td>@Convert.ToDateTime(dr.Modified).ToString("dd-MM-yyyy")</td>


                                            <td>
                                                <form method="post" asp-area="Booking" asp-controller="Booking" asp-action="BookingDetails" asp-route-BookingID="@dr.BookingID">
                                                    <button type="submit" class="btn btn-outline-success"><i class="ti-file btn-icon-append"></i></button>
                                                </form>
                                            </td>
                                            <td>

                                                <a type="button" asp-area="Booking" asp-controller="Booking" asp-action="DeleteUsers" asp-route-BookingID="@dr.BookingID" class="btn btn-outline-danger"><i class="ti-trash btn-icon-append"></i></a>


                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
            <!-- End Users List Card -->
        </div>
    </div>
</body>

</html>
