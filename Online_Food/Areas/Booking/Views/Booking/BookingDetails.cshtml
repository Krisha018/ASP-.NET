@using Online_Food.Areas.Booking.Models;
@using System.Data;
@using System.Collections;
@model Online_Food.Areas.Booking.Models.BookingModel;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"><h3>Booking Detail</h3></div>

                    <form>
                        <div class="form-group row">
                            <div class="col-sm-2">FirstName</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.FirstName</div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2">Address</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Address</div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2">OrderDate</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.OrderDate</div>
                        </div>

                        
                       @*  <div class="form-group row">
                            <div class="col-sm-2">MenuItemID</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.MenuItemID</div>
                        </div> *@
                        <div class="form-group row">
                            <div class="col-sm-2">MenuItemName</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.MenuItemName</div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-2">Email</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Email</div>
                        </div>
                        
                        <div class="form-group row">
                            <div class="col-sm-2">PhoneNumber</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.PhoneNumber</div>
                        </div>
                       

                        <tr>
                            <td>
                                <a type="button" asp-area="Booking" asp-controller="Booking" asp-action="BookingAddEdit" asp-route-BookingID="@Model.BookingID">
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                </a>

                            </td>
                        </tr>

                        <a class="btn btn-outline-secondary" asp-area="Booking" asp-controller="Booking" asp-action="BookingList">Back</a>



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>