@using Online_Food.Areas.Booking.Models;
@using System.Data;
@using System.Collections;
@model BookingModel


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-title"><h3>Booking Details</h3></div></br>
            <hr>

            <form method="post" asp-area="Booking" asp-controller="Booking" asp-action="SaveForAddEdit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="BookingID" />
                <div class="mb-3">
                    <label for="formValidationName" class="form-label"><span class="text-danger">* </span>Select FirstName</label>
                    <select id="inputState" class="form-control" asp-for="UserID"
                            asp-items="@(new SelectList(ViewBag.OFD_User_DropDownList,"UserID","FirstName"))">

                        <option disabled selected>Select FirstName</option>
                    </select>

                </div>

                 <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>Address</label>
                    <input type="text" class="form-control" required="required" asp-for="Address" placeholder="Address">
                </div>


                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label for="exampleInputEmail3">OrderDate</label>
                    <input type="datetime-local" class=" form-control" required="required" asp-for="OrderDate" placeholder="Enter OrderDate" />
                </div>

                <div class="mb-3">
                    <label for="formValidationName" class="form-label"><span class="text-danger">* </span>Select Menu</label>
                    <select id="inputState" class="form-control" asp-for="MenuItemID"
                            asp-items="@(new SelectList(ViewBag.DropDownMenu,"MenuItemID","MenuItemName"))">

                        <option disabled selected>Select Menu</option>
                    </select>

                </div>


                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>Email</label>
                    <input type="text" class=" form-control" required="required" asp-for="Email" placeholder="Enter Email" />
                </div>

               

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>PhoneNumber</label>
                    <input type="text" class=" form-control" required="required" asp-for="PhoneNumber" placeholder="Enter PhoneNumber" />

                </div>
               

                <div class="form-group">
                    <input type="submit" class=" btn btn-outline-success" value="Save">

                </div>
            </form>
        </div>
    </div>
</div>          