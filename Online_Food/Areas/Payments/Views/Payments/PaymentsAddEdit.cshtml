@using Online_Food.Areas.Payments.Models;
@using System.Data;
@using System.Collections;
@model PaymentsModel


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-title"><h3>Payment Details</h3></div></br>
            <hr>

            <form method="post" asp-area="Payments" asp-controller="Payments" asp-action="SaveForAddEdit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="PaymentID" />
                <div class="mb-3">
                    <label for="formValidationName" class="form-label"><span class="text-danger">* </span>Select TotalAmount</label>
                    <select id="inputState" class="form-control" asp-for="OrderID"
                            asp-items="@(new SelectList(ViewBag.FoodorderDropDownList,"OrderID","TotalAmount"))">

                        <option disabled selected>Select TotalAmount</option>
                    </select>

                </div>

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label>Amount</label>
                    <input type="text" class=" form-control" asp-for="Amount" required="required" placeholder="Enter Amount" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label for="exampleInputEmail3">PaymentDate</label>
                    <input type="datetime-local" class=" form-control" asp-for="PaymentDate" required="required" placeholder="Enter PaymentDate" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="formValidationName"><span class="text-danger">* </span></label>
                    <label for="exampleInputEmail3">PaymentStatus</label>
                    <input type="text" class=" form-control" asp-for="PaymentStatus" required="required" placeholder="Enter PaymentStatus" />
                </div>

               



                <div class="form-group">
                    <input type="submit" class=" btn btn-outline-success" value="Save">

                </div>
            </form>
        </div>
    </div>
</div>          