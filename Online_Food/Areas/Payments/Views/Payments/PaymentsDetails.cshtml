@using Online_Food.Areas.Payments.Models;
@using System.Data;
@using System.Collections;
@model Online_Food.Areas.Payments.Models.PaymentsModel;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"><h3>Payments Details</h3></div>

                    <form>

                        <div class="form-group row">
                            <div class="col-sm-2">OrderID</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.OrderID</div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2">Amount</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Amount</div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2">PaymentDate</div>
                            <div class="col-sm-10 form-control form-control-rounded ">@Model.PaymentDate</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">PaymentStatus</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.PaymentStatus</div>
                        </div>

                      
                        <tr>
                            <td>
                                <a type="button" asp-area="Payments" asp-controller="Payments" asp-action="PaymentsAddEdit" asp-route-PaymentID="@Model.PaymentID">
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                </a>

                            </td>
                        </tr>

                        <a class="btn btn-outline-secondary" asp-area="Payments" asp-controller="Payments" asp-action="PaymentsList">Back</a>



                    </form>
                </div>
            </div>
        </div>
    </div>
</div>