@using Student_Registration.Areas.MST_Student.Models;
@{
    ViewData["Title"] = "Student Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Student_Registration.Areas.MST_Student.Models.MST_StudentModel;
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<div>
    <form method="post" asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentSave">
        <div  class="text-danger"></div>
        <input type="hidden" name="StudentID" asp-for="StudentID" />


        <div class=" form-group">
            <label>Student Name</label>
            <input type="text" class=" form-control" asp-for="StudentName" placeholder="Enter Student Name" />
            <span asp-validation-for="StudentName" class="text-danger"></span>
        </div>
        <br />
        <style>


            .form-group label::before {
                content: "*";
                color: red;
            }

            input[required]:valid + label {
                display: none;
            }
        </style>

        <div class=" form-group">
            <label>Branch ID </label>
            <input type="text" class=" form-control" asp-for="BranchID" placeholder="Enter Branch ID" />
            <span asp-validation-for="BranchID" class="text-danger"></span>
        </div> <br />
        <div class=" form-group">
            <label>City ID </label>
            <input type="text" class=" form-control" asp-for="CityID" placeholder="Enter City ID" />
            <span asp-validation-for="CityID" class="text-danger"></span>
        </div> <br />
        <div class=" form-group">
            <label>Student Mobile Number </label>
            <input type="text" class=" form-control" asp-for="MobileNoStudent" placeholder="Enter Student Mobile Number" />
            <span asp-validation-for="MobileNoStudent" class="text-danger"></span>
        </div> <br />
        <div class=" form-group">
            <label> Student Email</label>
            <input type="text" class=" form-control" asp-for="Email" placeholder="Enter Student Email " />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div> <br />

        <div class=" form-group">
            <label> Student Father Mobile Number</label>
            <input type="text" class=" form-control" asp-for="MobileNoFather" placeholder="Enter  Student Father Mobile Number " />
            <span asp-validation-for="MobileNoFather" class="text-danger"></span>
        </div> <br />

        <div class=" form-group">
            <label> Student  Address</label>
            <input type="text" class=" form-control" asp-for="Address" placeholder="Enter Student Address " />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div> <br />

        <div class=" form-group">
            <label> Student  BirthDate</label>
            <input type="date" class=" form-control" asp-for="BirthDate" placeholder="Enter BirthDate " />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div> <br />

         <div class=" form-group">
            <label> Student  Age</label>
            <input type="text" class=" form-control" asp-for="Age" placeholder="Enter  Student Age " />

            <span asp-validation-for="Age" class="text-danger"></span>
        </div> <br />

        <div class=" form-group">
            <label> Student  IsActive</label>
            <input type="text" class=" form-control" asp-for="IsActive" placeholder="Enter  IsActive" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div> <br />

        <div class=" form-group">
            <label> Student  Gender</label>
            <input type="text" class=" form-control" asp-for="Gender" placeholder="Enter  Student Gender " />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div> <br />


        <div class=" form-group">
            <label> Student  Password</label>
            <input type="text" class=" form-control" asp-for="Password" placeholder="Enter  Student Password " />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div> <br />


       


        <div class="d-grid gap-2 col-6 mx-auto">
          
            <button type="submit" value="Save" class="submit btn btn-outline-primary">Save</button>
        </div>
    </form>
</div>
