@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable


<table class="table table-striped table-hover">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <form class="d-flex w-75" role="search" asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentList">
        <input class=" small-input" type="text" placeholder="StudentName" aria-label="Search" name="StudentName">&nbsp&nbsp&nbsp;
        <input class=" small-input" type="text" placeholder="BranchName" aria-label="Search" name="StudentName">&nbsp&nbsp&nbsp;
        <input class=" small-input" type="text" placeholder="Email" aria-label="Search" name="StudentName">&nbsp&nbsp&nbsp;
        <input class=" small-input" type="text" placeholder="CountryName" aria-label="Search" name="StudentName">&nbsp&nbsp&nbsp;
        <input class=" small-input" type="text" placeholder="StateName" aria-label="Search" name="StudentName">&nbsp&nbsp&nbsp;
        <input class=" small-input" type="text" placeholder="CityName" aria-label="Search" name="StudentName">&nbsp&nbsp&nbsp;
        <input class=" small-input" type="text" placeholder="isActive" aria-label="Search" name="StudentName">&nbsp&nbsp&nbsp;

        <button class="btn btn-outline-success" type="submit">Search</button>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp;

    </form>

    </div>
    <thead>
        <tr>
            <a class="btn btn-outline-primary" asp-action="MST_StudentAdd" asp-area="MST_Student" asp-controller="MST_Student">Add Student</a>
        </tr>
        <tr>
            <th scope="col">Student ID</th>
            <th scope="col">Student Name</th>
            <th scope="col">Student Mobile Number</th>
            <th scope="col">Student Email</th>
            <th scope="col">Student MobileNoFather</th>
            <th scope="col">Student Address</th>
            <th scope="col">Student BirthDate</th>
            <th scope="col">Student Age</th>
            <th scope="col">IsActive</th>
            <th scope="col">Student Gender</th>
            <th scope="col">Student Password</th>
            <th scope="col">Branch ID</th>
            <th scope="col">City ID</th>
            <th scope="col">Created</th>
            <th scope="col">Modified</th>
            
            
           <th scope="col" colspan="2"><center>Action</center></th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow dataRow in Model.Rows)
        {
            <tr>
                <td>@dataRow["StudentID"]</td>
                <td>@dataRow["StudentName"]</td>
                <td>@dataRow["MobileNoStudent"]</td>
                <td>@dataRow["Email"]</td>
                <td>@dataRow["MobileNoFather"]</td>
                <td>@dataRow["Address"]</td>
              
                <td>@Convert.ToDateTime(dataRow["BirthDate"]).ToString("dd-MMM-yyyy")</td>
                <td>@dataRow["Age"]</td>
                <td>@dataRow["IsActive"]</td>
                <td>@dataRow["Gender"]</td>
                <td>@dataRow["Password"]</td>
                <td>@dataRow["BranchID"]</td>
                <td>@dataRow["CityID"]</td>

                <td>@Convert.ToDateTime(dataRow["Created"]).ToString("dd-MM-yyyy")</td>
                <td>@Convert.ToDateTime(dataRow["Modified"]).ToString("dd-MM-yyyy")</td>
                <td>
                    <form method="post" asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentDelete">
                        <input type="hidden" value="@Convert.ToInt32(dataRow["StudentID"])" name="StudentID">
                        <button type="submit" class="btn btn-outline-danger" value="Delete">Delete</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentAdd">
                        <input type="hidden" value="@Convert.ToInt32(dataRow["StudentID"])" name="StudentID">
                        <button type="submit" class="btn btn-outline-success" value="Edit">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
