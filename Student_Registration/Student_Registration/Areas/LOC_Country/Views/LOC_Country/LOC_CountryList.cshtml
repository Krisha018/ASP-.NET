@{
    ViewData["Title"] = "Country List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable


<table class="table table-striped table-hover">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



    <form class="d-flex w-75" role="search" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="LOC_CountryList">
        <input class=" small-input" type="text" placeholder="CountryName" aria-label="Search" name="CountryName">&nbsp&nbsp&nbsp;
        <input class="small-input" type="text" placeholder="CountryCode" aria-label="Search" name="CountryCode">&nbsp&nbsp&nbsp;
        <button class="btn btn-outline-success" type="submit">Search</button>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp;

    </form>
    
   

   
   </div>
    <thead>
        <tr>
            <a class="btn btn-outline-primary" asp-action="LOC_CountryAdd" asp-area="LOC_Country" asp-controller="LOC_Country">Add Country</a>&nbsp;
            <a class="btn btn-outline-primary" asp-action="ExportCountryToExcel" asp-area="LOC_Country" asp-controller="LOC_Country">XML</a>&nbsp;
            <button id="deleteSelectedBtn" class="btn btn-outline-danger">Delete Selected</button>
        </tr>
        <tr>
            <th scope="col"></th>
            <th scope="col">Country ID</th>
            <th scope="col">Country Name</th>
            <th scope="col">Country Code</th>
            <th scope="col">Created</th>
            <th scope="col">Modified</th>
            <th scope="col" colspan="2"><center>Action</center></th>
        </tr>
    </thead>
    <tbody>

        @foreach (DataRow dataRow in Model.Rows)    
        {

            <tr>
                <td class="text-center"><input type="checkbox" class="chkDelete" name="chkDeleteName" value="@dataRow["CountryID"]" /></td>

