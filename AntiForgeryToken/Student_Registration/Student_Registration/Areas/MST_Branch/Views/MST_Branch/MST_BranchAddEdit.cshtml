@using Student_Registration.Areas.MST_Branch.Models;
@{
    ViewData["Title"] = "Branch  Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Student_Registration.Areas.MST_Branch.Models.MST_BranchModel;

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div>
    <form method="post" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchSave">
        <div  class="text-danger"></div>
        <div class=" form-group">
            <label>Branch Name</label>
            <input type="text" class=" form-control" required="required" asp-for="BranchName" placeholder="Enter Branch Name" />
            <span asp-validation-for="BranchName" class="text-danger"></span>
        </div>
        <br />  <style>


                    .form-group label::before {
                        content: "*";
                        color: red;
                    }

                    input[required]:valid + label {
                        display: none;
                    }
        </style>


        <div class=" form-group">
            <label>Branch Code</label>
            <input type="text" class=" form-control" required="required" asp-for="BranchCode" placeholder="Enter Branch Code" />
            <span asp-validation-for="BranchCode" class="text-danger"></span>
            
        </div> <br />
       
       



        <div class="d-grid gap-2 col-6 mx-auto">
            <input type="hidden" name="BranchID" asp-for="BranchID" />
            <button type="submit" value="Save" class="submit btn btn-outline-primary">Save</button>
        </div>
    </form>
</div>
